extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Registration Details
                div.signup-wall
                    form(class='form-signin', action='/signup', method='POST')
                        input.form-control(type="email", name="username", placeholder="Email address")
                        input.form-control(type="password", name="password", placeholder="Password")
                        label.checkbox.text-center
                          input(type='checkbox', name='admin')
                          |  Admin
                        button(class='btn btn-lg btn-primary btn-block', type='submit') Register
                        span.clearfix
                #message
                    if message
                        h1.text-center.error-message #{message}