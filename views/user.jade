extends layout

block content
    div.container
        div.row
            h3 User info
            table.table
                thead
                  tr
                    th User ID
                    th Email
                    th Acces Token
                tbody
                      tr
                        td #{user._id}
                        td #{user.email}
                        td #{user.accesToken}
            col-md-6
              h3 Subscriptions
              table.table
                thead
                  tr
                    th Channel ID
                    th Channel name
                    th Connected
                - each subscription, i in subscriptions
                    - each channel, i in subscription.channel
                        tbody
                          tr
                            td #{channel._id}
                            td #{channel.name}
                            td #{channel.connected}
